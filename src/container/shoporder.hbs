                    <div class="my-2">
                        {{#if total.button.[0].isPrimary}}
                        <button type="button" class="btn btn-primary col-10">{{total.button.[0].text}}</button>
                        {{else}}
                        <button type="button" class="btn btn-outline-primary">{{total.button.[0].text}}</button>
                        {{/if}}
                    </div>

                    <div class="my-2">
                        {{#if total.button.[1].isOutline}}
                        <button type="button" class="btn btn-outline-primary col-8">{{total.button.[1].text}}</button>
