<main class="g-5">


    <div class="card my-5">
        <div class="card-body">
            <div class="nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if href}} {{else}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="pt-1">
        <h1 class="col-12 my-5">{{header}}</h1>
    </div>

    <div class="row">
        <div class="col-8">


            <div class="mb-3">
                <h2 class="col-12">{{contacts_data.title}}</h2>
            </div>

            <div class="row col-12">
                <div class="col-4">
                    {{#if contacts_data.buttons.[0].isPrimary}}
                    <button type="button" class="btn btn-warning">{{contacts_data.buttons.[0].text}}</button>
                    {{else}}
                    <button type="button" class="btn btn-outline-warning">{{contacts_data.buttons.[0].text}}</button>
                    {{/if}}
                </div>

                <div class="col-4">
                    {{#if contacts_data.buttons.[1].isOutline}}
                    <button type="button" class="btn btn-outline-warning">{{contacts_data.buttons.[1].text}}</button>
                    {{else}}
                    <button type="button" class="btn btn-warning">{{contacts_data.buttons.[1].text}}</button>
                    {{/if}}
                </div>
            </div>

            <div>
                <div class="row col-12">

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contacts_data.form.input.surname.label}}</label>
                        <input placeholder="{{contacts_data.form.input.surname.placeholder}}" class="form-control">
                        <div class="form-text">{{contacts_data.form.input.surname.caption}}</div>
                    </div>

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contacts_data.form.input.name.label}}</label>
                        <input placeholder="{{contacts_data.form.input.name.placeholder}}" class="form-control">
                        <div class="form-text">{{contacts_data.form.input.name.caption}}</div>
                    </div>

                </div>

                <div class="row col-12">

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contacts_data.form.input.phone.label}}</label>
                        <input placeholder="{{contacts_data.form.input.phone.placeholder}}" class="form-control">
                        <div class="form-text">{{contacts_data.form.input.phone.caption}}</div>
                    </div>

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contacts_data.form.input.email.label}}</label>
                        <input placeholder="{{contacts_data.form.input.email.placeholder}}" class="form-control">
                        <div class="form-text">{{contacts_data.form.input.email.caption}}</div>
                    </div>

                </div>
            </div>

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div>

                <div>
                    {{#if contacts_data.form.switch.[0].isActive}}
                    <div class="row col-12 mb-3 ms-0">
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{contacts_data.form.switch.[0].text}}</label>
                            <input checked type="checkbox" class="form-check-input">
                        </div>
                    </div>
                    {{else}}
                    <div class="row col-12 mb-3 ms-0">
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{contacts_data.form.switch.[0].text}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                    </div>
                    {{/if}}
                </div>

                <div>
                    {{#if contacts_data.form.switch.[1].isActive}}
                    <div class="row col-12 mb-3 ms-0">
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{contacts_data.form.switch.[1].text}}</label>
                            <input checked type="checkbox" class="form-check-input">
                        </div>
                    </div>
                    {{else}}
                    <div class="row col-12 mb-3 ms-0">
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{contacts_data.form.switch.[1].text}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div class="mt-3">
                <h2>{{delivery.title}}</h2>
            </div>


            <div class="col-12">
                {{#with delivery}}
                <div class="card">
                    <div class="card-body">

                        {{#with select.[0]}}
                        <div class="row">
                            <div class="col-6">
                                <label clas="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>

                                    {{#each options}}
                                    <option value="{{value}}">
                                        {{text}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            {{/with}}

                            {{#with select.[1]}}
                            <div class="col-6">
                                <label clas="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>

                                    {{#each options}}
                                    <option value="{{value}}">
                                        {{text}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            {{/with}}
                        </div>

                    </div>
                </div>
                {{/with}}
            </div>


            <div class="mt-3">
                <div class="col-12">
                    {{#with delivery}}
                    {{#with delivery_type}}
                    <div class="form-check">
                        <label class="form-check-label">{{[0].type}}</label>
                        <input name="delivery" type="radio" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{[1].type}}</label>
                        <input name="delivery" type="radio" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{[2].type}}</label>
                        <input name="delivery" type="radio" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{[3].type}}</label>
                        <input name="delivery" type="radio" class="form-check-input">
                    </div>
                    {{/with}}

                </div>
            </div>

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div class="mt-3">
                <h2>{{payment.title}}</h2>
            </div>


            <div class="col-12">
                <div class="form-check">
                    <label class="form-check-label">{{payment.list.[0].type}}</label>
                    <input name="payment" type="radio" class="form-check-input">
                    <div class="form-text">{{payment.list.[0].description}}</div>
                </div>

                <div class="form-check">
                    <label class="form-check-label">{{payment.list.[1].type}}</label>
                    <input name="payment" type="radio" class="form-check-input">
                </div>
            </div>

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div>
                <div class="mt-3">
                    <h2>{{contact.title}}</h2>
                </div>
                <div class="row col-12">

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contact.surname.label}}</label>
                        <input placeholder="{{contact.surname.placeholder}}" class="form-control">
                        <div class="form-text">{{contact.surname.caption}}</div>
                    </div>

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contact.name.label}}</label>
                        <input placeholder="{{contact.name.placeholder}}" class="form-control">
                        <div class="form-text">{{contact.name.caption}}</div>
                    </div>

                </div>

                <div class="row col-12">

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contact.phone.label}}</label>
                        <input placeholder="{{contact.phone.placeholder}}" class="form-control">
                        <div class="form-text">{{contact.phone.caption}}</div>
                    </div>

                    <div class="col-6 mt-3">
                        <label class="form-label">{{contact.email.label}}</label>
                        <input placeholder="{{contact.email.placeholder}}" class="form-control">
                        <div class="form-text">{{contact.email.caption}}</div>
                    </div>

                </div>
            </div>

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div class="my-4">
                <label>{{coment.label}}</label>
                <input class="form-control" placeholder="{{coment.placeholder}}">
            </div>
            {{/with}}
            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div class="mt-3">
                <h2>{{coupon.title}}</h2>
            </div>

            <div class="mt-4">

                {{#with coupon}}
                {{#with select}}
                <div>
                    <label class="form-label">{{availabel_coupon.label}}</label>
                    <select class="form-select form-select-lg">
                        <option selected>{{availabel_coupon.placeholder}}</option>

                        {{#each availabel_coupon.options}}
                        <option value="{{value}}">
                            {{text}}
                        </option>
                        {{/each}}

                    </select>
                </div>

                <div class="mt-4">
                    <label class="form-label">{{friend_coupon.label}}</label>
                    <select class="form-select form-select-sm">
                        <option selected>{{friend_coupon.placeholder}}</option>

                        {{#each friend_coupon.options}}
                        <option value="{{value}}">
                            {{text}}
                        </option>
                        {{/each}}

                    </select>
                </div>
                {{/with}}

                <div class="mt-4">
                    <label class="form-label">{{add.friend.label}}</label>
                    <input placeholder="{{add.friend.placeholder}}" class="form-control form-select-lg">
                    <div class="form-text">{{add.friend.caption}}</div>
                </div>

                <div class=" col-10 mt-4">
                    <label class="form-label">{{add.colleague.label}}</label>
                    <input placeholder="{{add.colleague.placeholder}}" class="form-control form-select-sm">
                    <div class="form-text">{{add.colleague.caption}}</div>
                </div>
            </div>
            {{/with}}

            <div class="row col-12">
                <hr class="my-4">
            </div>

            {{#with quiz}}
            <div class="mt-3">
                <h2>{{title}}</h2>
            </div>

            <div class="mt-3">
                <div class="form-label">{{preference.title}}</div>

                <div class="form-check">
                    <label class="form-check-label">{{preference.options.[0]}}</label>
                    <input name="device" type="radio" class="form-check-input">
                </div>

                <div class="form-check">
                    <label class="form-check-label">{{preference.options.[1]}}</label>
                    <input name="device" type="radio" class="form-check-input">
                </div>

                <div class="form-check">
                    <label class="form-check-label">{{preference.options.[2]}}</label>
                    <input name="device" type="radio" class="form-check-input">
                </div>

                <div class="form-check">
                    <label class="form-check-label">{{preference.options.[3]}}</label>
                    <input name="device" type="radio" class="form-check-input">
                </div>

                <div class="form-check">
                    <label class="form-check-label">{{preference.options.[4]}}</label>
                    <input name="device" type="radio" class="form-check-input">
                </div>

                <div class="col-12 mt-3">
                    <label class="form-label">{{your_expirience.label}}</label>
                    <input class="form-control ">
                </div>

                <div class="col-12 mt-3">
                    <label class="form-label">{{purchase_frequency.label}}</label>
                    <select class="form-select">
                        <option selected>{{purchase_frequency.placeholder}}</option>

                        {{#each purchase_frequency.options}}
                        <option value="{{value}}">
                            {{text}}
                        </option>
                        {{/each}}

                    </select>
                </div>

                <div class="mt-3">
                    <div class="form-label">{{factors.title}}</div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[0]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[1]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[2]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[3]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[4]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[5]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">{{factors.options.[6]}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>

                </div>
            </div>
            {{/with}}

            <div class="row col-12">
                <hr class="my-4">
            </div>

            <div>

                <div class="row">
                    {{#each footer.[0]}}
                    <div class="col-3 px-1">
                        <form action="{{link}}" target="_blank">
                            <button class="btn btn-link">{{text}}</button>
                        </form>
                    </div>
                    {{/each}}

                </div>

                <div class="row">

                    {{#each footer.[1]}}
                    <div class="col-3 px-1">
                        <form action="{{link}}" target="_blank">
                            <button class="btn btn-link">{{text}}</button>
                        </form>
                    </div>
                    {{/each}}

                </div>

                <div class="row">

                    {{#each footer.[2]}}
                    <div class="col-3 px-1">
                        <form action="{{link}}" target="_blank">
                            <button class="btn btn-link">{{text}}</button>
                        </form>
                    </div>
                    {{/each}}

                </div>

                <div class="row">

                    {{#each footer.[3]}}
                    <div class="col-3 px-1">
                        <form action="{{link}}" target="_blank">
                            <button class="btn btn-link">{{text}}</button>
                        </form>
                    </div>
                    {{/each}}

                </div>

                <div class="row">

                    {{#each footer.[4]}}
                    <div class="col-3 px-1">
                        <form action="{{link}}" target="_blank">
                            <button class="btn btn-link disabled">{{text}}</button>
                        </form>
                    </div>
                    {{/each}}

                </div>
            </div>


        </div>


















        <div class="col-4">

            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="my-2">
                            {{#if action_block.[0].isSuccess}}
                            <button type="button" class="btn btn-success">{{action_block.[0].text}}</button>
                            {{else}}
                            <button type="button" class="btn btn-outline-success">{{action_block.[0].text}}</button>
                            {{/if}}
                        </div>

                        <div class="my-2">
                            {{#if action_block.[1].isDanger}}
                            <button type="button" class="btn btn-danger">{{action_block.[1].text}}</button>
                            {{else}}
                            <button type="button" class="btn btn-outline-danger">{{action_block.[1].text}}</button>
                            {{/if}}
                        </div>

                        <div class="my-2">
                            {{#if action_block.[2].isInfo}}
                            <button type="button" class="btn btn-info">{{action_block.[2].text}}</button>
                            {{else}}
                            <button type="button" class="btn btn-outline-info">{{action_block.[2].text}}</button>
                            {{/if}}
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-12 mt-3">
                {{#with total}}

                <div class="card">
                    <div class="card-body">

                        <h3 class="card-title mb-3">{{title}}</h3>

                        <div class="row">
                            {{#each item_list}}
                            <span>{{name}}: {{price}}</span>
                            {{/each}}
                        </div>

                        <hr>

                        {{#each additional_info}}
                        <div class="row">
                            <span>{{text}}: {{value}}</span>
                        </div>
                        {{/each}}

                        <hr>

                        {{#with total_price}}
                        <span>{{text}}: {{value}}</span>
                        {{/with}}

                        <hr>

                        {{#each button}}
                        <button class="my-1 btn {{#if isPrimary}}btn-primary{{/if}}
                        {{#if isOutline}} btn-outline-primary{{/if}}">{{text}}</button>
                        {{/each}}

                    </div>
                </div>
                {{/with}}













