<main class="g-5">
    <div class="row">

        {{!-- Left Block --}}
        <div class="card my-0">
            <div class="card-body nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="row col-12 mt-5 px-0">

            <div class="col-8">
                {{#with formBlock}}
                <div>
                    <h1>{{header}}</h1>
                    <span>{{rating.title}}: {{rating.value}}</span>
                </div>

                <div>
                    <div class="nav nav-tabs">
                        {{#each actionBlock.tabs}}
                        <div class="nav-item col-4">
                            <a href="#" class="nav-link {{#if isActive}} active {{/if}} text-center">
                                {{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="my-5">
                    <hr>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p>{{actionBlock.report.title}}</p>
                        <a href="{{actionBlock.report.button.link}}"
                            class="btn btn-secondary">{{actionBlock.report.button.text}}</a>
                    </div>
                </div>

                <div class="my-5">
                    <hr>
                </div>

                <div>
                    <h2>{{feedbackBlock.title}}</h2>
                    <div class="mt-4">
                        {{#each feedbackBlock.buttons}}
                        <a href="{{link}}" class="btn {{#if isWarning}} btn-warning {{/if}}
                    {{#if isSuccess}} btn-success {{/if}}
                    {{#if isDanger}} btn-danger {{/if}} mx-4 ms-0">{{text}}</a>
                        {{/each}}
                    </div>
                </div>

            </div>

            {{!-- Right Block --}}
            {{#with goodsInfo}}
            <div class="col-4">

                <div class="card col-12">
                    <div class="card-body">
                        <img src="{{photo}}">
                        <p class="mt-3 mb-0">{{name}}</p>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h5>{{price}}</h5>
                        {{#if inMarket}}<p>Є в наявності</p>{{/if}}

                        <div class="col-8">
                            {{#each buttons}}
                            <a href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}}
                        {{#if isSecondary}} btn-secondary {{/if}} my-2">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        {{#with seller}}
                        <span>{{title}}</span>
                        <strong>{{value}}</strong>
                        {{/with}}
                    </div>
                </div>

            </div>
            {{/with}}

            {{/with}}
        </div>

        <div class="my-5">
            <hr>
        </div>


        {{#each reviewList}}
        {{> reviewltem}}
        {{/each}}


        <div class="card text-bg-success mt-5">
            <div class="card-body">
                <h2 class="text-center">{{service.title}}</h2>
                <p class="text-center">{{service.description}}</p>

                <div class="text-center">
                    {{#each service.buttons}}
                    <a href="{{link}}" class="btn btn-primary text-center">{{text}}</a>
                    {{/each}}

                </div>
            </div>
        </div>

        <hr class="my-5">


        <footer>

            <div class="row">
                {{#each footer.[0]}}
                <div class="col-3 px-1">
                    <form action="{{link}}" target="_blank">
                        <button class="btn btn-link">{{text}}</button>
                    </form>
                </div>
                {{/each}}
            </div>

            <div class="row">
                {{#each footer.[1]}}
                <div class="col-3 px-1">
                    <form action="{{link}}" target="_blank">
                        <button class="btn btn-link">{{text}}</button>
                    </form>
                </div>
                {{/each}}
            </div>

            <div class="row">
                {{#each footer.[2]}}
                <div class="col-3 px-1">
                    <form action="{{link}}" target="_blank">
                        <button class="btn btn-link">{{text}}</button>
                    </form>
                </div>
                {{/each}}
            </div>

            <div class="row">
                {{#each footer.[3]}}
                <div class="col-3 px-1">
                    <form action="{{link}}" target="_blank">
                        <button class="btn btn-link">{{text}}</button>
                    </form>
                </div>
                {{/each}}
            </div>

            <div class="row">
                {{#each footer.[4]}}
                <div class="col-3 px-1">
                    <form action="{{link}}" target="_blank">
                        <button class="btn btn-link disabled">{{text}}</button>
                    </form>
                </div>
                {{/each}}
            </div>

        </footer>





    </div>
</main>