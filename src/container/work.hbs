{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main class="g-5">
	<div>
		{{#with main}}
		<main>
			<section>
				{{> title data="Work history" big=true}}
				<div>
					<ul>
						{{#each works}}
						<li>
							<div>{{position}}</div>

							<br>

							<div>
								{{duration.from}}
								-
								{{#if duration.to}}
								{{duration.to}}
								{{else}}
								(досі працюємо)
								{{/if}}
							</div>

							<br>

							<div>
								{{#if company.url}}
								{{> link text=company.name href=company.url blank=true noLine=true}}
								{{else}}
								<b>{{company.name}}</b>
								{{/if}}
							</div>

							<br>
							<br>

							<div>
								<strong>Projects ({{projectAmount}})</strong>
							</div>

							<br>

							<ul>
								{{#each projects}}
								<li>
									<div>
										{{> link text=name href=url blank=true noLine=true}}
									</div>
								</li>

								<li>
									<div>
										<p>{{about}}</p>
									</div>
								</li>

								<br>

								<li>
									<div>
										<em>Project stacks ({{stackAmount}})</em>
									</div>
								</li>

								<br>

								<div>
									{{#each stacks}}
									<ul>
										<li>
											{{name}}
										</li>
									</ul>
									{{/each}}
								</div>

								<br>

								<li>
									<div>
										<em>Project awards</em>
									</div>
								</li>

								<br>

								<div>
									{{#each awards}}
									<ul>
										<li>
											{{name}}
										</li>
									</ul>
									{{/each}}
								</div>


						</li>
						{{/each}}
					</ul>
					</li>
					{{/each}}
					</ul>
				</div>
			</section>
		</main>
		{{/with}}
	</div>

</main>
{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}