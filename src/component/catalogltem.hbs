<div class="col-6 my-2">
    <div class="card">
        <img class="card-img-top" src="{{img}}">
        <div class="card-body">
            <div class="col-12">
                <div class="badge rounded-pill text-bg-warning">{{#if isHot}} HOT! {{/if}}</div>
                <div class="badge rounded-pill text-bg-primary">{{#if isNew}} New {{/if}}</div>
            </div>

            <div class="col-12 mt-3 mb-3">
                <div class="badge text-bg-secondary">{{#if isFast}} Швидка доставка {{/if}}</div>
                <div class="badge text-bg-success">{{#if isFree}} Безкоштовна доставка {{/if}}</div>
            </div>

            <strong class="card-title">{{name}}</strong>
            <p class="mt-2">{{review.amount}} {{review.text}}</p>
            <strong>{{price}}</strong>
            <p class="mt-2">{{delivery}}</p>
            <div>
                {{#each buttons}}
                <a href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}}
                {{#if isSecondary}} btn-secondary {{/if}} mt-2">{{text}}</a>
                {{/each}}
            </div>

            <div class="mt-3">
                {{#each characteristics}}
                <ul class="mb-0">
                    <li>{{title}}: {{value}}</li>
                </ul>
                {{/each}}
            </div>

        </div>
    </div>
</div>